---
layout: layout.njk
permalink: /project/data/edit/
---
{% set theJs %}
    {% include 'project-data-edit.js' %}
{% endset %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800" id="project-header"></h1>
        <a onclick="history.back()" href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-backward fa-sm text-white-50"></i> Back</a>
    </div>
<p class="mb-4">
</p>
    <div id="formInputs">
        <div class="form-group" >
            <input type="email" class="form-control form-control-user" id="inp-projectname" aria-describedby="emailHelp" placeholder="Enter a project name...">
           	<span class="text-danger d-none" id="error-projectname">Name </span>  
        </div>
    </div>
    <button class="btn btn-primary btn-user btn-block" id="btn-edit">
        Update
    </button>
</div>

{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}
